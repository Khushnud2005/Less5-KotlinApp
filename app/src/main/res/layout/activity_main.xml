<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:textAlignment="center"
            android:text="Relative Layout Example"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_userId"
            android:layout_centerVertical="true"
            android:layout_marginBottom="150dp"/>
        <TextView
            android:id="@+id/tv_userId"
            android:text="User ID"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_userId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/tv_userId"
            android:layout_marginLeft="20dp"
            android:hint="Id"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_userPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User PW"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_userId"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/et_userPW"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/tv_userPW"
            android:layout_below="@id/et_userId"
            android:layout_marginLeft="20dp"
            android:hint="Password"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:layout_below="@id/et_userPW"/>


        <Button
            android:id="@+id/btn_toTasks"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#61BA21"
            android:text="To Tasks -->"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>